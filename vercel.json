{
  "buildCommand": "cd frontend && npm install --legacy-peer-deps && npm run build && cd ../api && npm install",
  "outputDirectory": "frontend/dist",
  "installCommand": "echo 'Skipping install'",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
