# ============================================
# SUPABASE (Banco de Dados)
# ============================================
DATABASE_URL=postgresql://user:password@host:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://user:password@host:5432/postgres

# ============================================
# JWT (Segurança)
# ============================================
# Gere uma chave aleatória: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here

# ============================================
# CORS (Proteção Cross-Origin)
# ============================================
# Local: http://localhost:5173
# Produção: https://gac-gestao.vercel.app
CORS_ORIGIN=http://localhost:5173

# ============================================
# PUSHER (Real-Time)
# ============================================
PUSHER_APP_ID=your-app-id
PUSHER_KEY=your-key
PUSHER_SECRET=your-secret
PUSHER_CLUSTER=us2

# ============================================
# BREVO (Envio de Email)
# ============================================
# Obtenha em: https://app.brevo.com > Settings > SMTP & API > API Keys
BREVO_API_KEY=xkeysib-your-api-key-here
EMAIL_FROM=noreply@gac-gestao.com
EMAIL_FROM_NAME=GAC - Sistema de Gestão

# ============================================
# AMBIENTE
# ============================================
NODE_ENV=development
